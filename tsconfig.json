{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", // Важно! Измените на CommonJS
    "moduleResolution": "node", // Измените на node
    "allowImportingTsExtensions": false, // Уберите это
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}